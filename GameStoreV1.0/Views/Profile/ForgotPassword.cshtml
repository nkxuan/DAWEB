@model Profile
@{
    ViewData["Title"] = "ForgotPassword";

}



<div id="appvue">

    <register-component></register-component>

    <section class="youplay-banner banner-top youplay-banner-parallax full">
        <div class="image" data-speed="0.4">
            <img src="/upload/2/648bc7ed1119d.jpg" alt class="jarallax-img">
        </div>
        <div class="info">
            <div class="container">
                <div class="youplay-login">
                    <div class="youplay-form text-center">
                        <h1>Forgot Password</h1>
                        @if (@ViewBag.Fail != null)
                        {
                            <div class="alert" style="background-color: red">
                                <span class="closebtn" onclick="this.parentElement.style.display = 'none';">&times;</span>
                                <strong>Poor checked!</strong> @ViewBag.Fail

                            </div>
                        }
                        @if (@ViewBag.Success != null)
                        {
                            <div class="alert" style="background-color: rgb(0, 255, 102)">
                                <span class="closebtn" onclick="this.parentElement.style.display = 'none';">&times;</span>
                                <strong>Lucky checked!</strong> @ViewBag.Success

                            </div>
                        }
                        <br />
                        <form asp-action="ForgotPassword" asp-controller="Profile" method="POST">
                            <input type="hidden" name="_token" value="DnOQFjzFWSUiauzhg7PTqU8ZaHtLpOqemNzTCU4S" />
                            <div class="youplay-input">
                                <input type="email" asp-for="email" placeholder="Email">
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <button class="btn btn-default db" name="btnLogin1">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}