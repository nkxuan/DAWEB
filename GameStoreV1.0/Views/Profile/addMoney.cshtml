@model Profile
@{
    ViewData["Title"] = "addMoney";
    DateTime now = DateTime.Now;
    string formattedDateTime = now.ToString("dd/MM/yyyy HH:mm:ss");
    bool isCookieExists = Context.Request.Cookies.ContainsKey("UserCookie");

}
<div style="padding: 10% 3% 5% 3%; background-color: black;">
    <div class="container mt-5" style="margin-top: 10%;">
        <div class="row">
            <div class="col-md-5">
                <img src="/upload/img/QR.jpg" alt="Your Image" class="img-fluid">
            </div>
            <div class="col-md-1">

            </div>
            <div class="col-md-4">
                <div class="card">
                    @if (@ViewBag.Fail != null)
                        {
                            <div class="alert" style="background-color: red">
                                <span class="closebtn" onclick="this.parentElement.style.display = 'none';">&times;</span>
                                <strong>Poor checked!</strong> @ViewBag.Fail

                            </div>
                        }
                        @if (@ViewBag.Success != null)
                        {
                            <div class="alert" style="background-color: green">
                                <span class="closebtn" onclick="this.parentElement.style.display = 'none';">&times;</span>
                                <strong>Poor checked!</strong> @ViewBag.Success

                            </div>
                        }
                    <div class="card-body">
                        <form asp-controller="Profile" asp-action="addMoney" method="post">
                            <div class="form-group">
                                <label for="dateTime">Date and Time:</label>
                                <p id="dateTime" class="form-control-static">@formattedDateTime</p>
                            </div>
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input type="text" id="username" value="@Model.username" class="form-control" disabled>
                            </div>
                            <div class="form-group">
                                <label for="txtmoney">Enter Amount:</label>
                                <select class="form-control" name="txtmoney" id="txtmoney">
                                    <option value="10000">10.000</option>
                                    <option value="20000">20.000</option>
                                    <option value="50000">50.000</option>
                                    <option value="100000">100.000</option>
                                    <option value="200000">200.000</option>
                                    <option value="500000">500.000</option>
                                </select>
                            </div>
                            <div class="form-group" style="margin-top: 20px;">
                                <input type="submit" value="Add Money" class="btn btn-light btn-block text-dark"
                                    style="background-color: #ffff;color:black;margin: 10% 30% 0% 30%;width: 40%;">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
